<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/acca"
            android:layout_width="290dp"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:scaleType="fitStart"
            android:src="@drawable/accent_login" />

        <ImageView
            android:id="@+id/accb"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="64dp"
            android:scaleType="fitEnd"
            android:src="@drawable/accent_login_dua" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/intro"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="24dp"
                android:text="Baberes (Beta Ver. 0.2.3)"
                android:textColor="#4d4d4d"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/intro_des"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="6dp"
                android:text="Lihat Sekeliling mu \nBereskan Banten \nUntuk Kita"
                android:textColor="#8b8b8b"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="16dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <com.pixplicity.fontview.FontAppCompatTextView
                    android:layout_width="wrap_content"
                    style="@style/FontTextViewStyle"
                    android:text="Sign Up"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account_multiple_plus"/>


            </LinearLayout>

            <View
                android:layout_width="120dp"
                android:layout_gravity="end"
                android:layout_height="1dp"
                android:background="#5dd4c6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="-40dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="-16dp"
                    android:layout_marginTop="23dp"
                    android:src="@drawable/shadow" />

                <LinearLayout
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="64dp"
                    android:background="@drawable/bg_edit"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="16dp">

                    <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ed_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:hint="Email"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_typeface="fonts/SF-UI-Display-Regular.otf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="#e6e6e6" />

                    <com.rengwuxian.materialedittext.MaterialEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ed_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_typeface="fonts/SF-UI-Display-Regular.otf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/field"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-25dp"
                    android:background="@drawable/bg_button_login"
                    android:elevation="6dp"
                    android:padding="12dp">

                    <com.pixplicity.fontview.FontAppCompatTextView
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="SIGN IN"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>