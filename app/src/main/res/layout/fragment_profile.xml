<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="32dp"
                android:paddingTop="32dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_fab" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_photoProfile"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_marginLeft="24dp"
                        android:src="@drawable/dummy"
                        app:layout_anchorGravity="bottom" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="-20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:id="@+id/txtDisplayName"
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Helmi Ismail"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        android:id="@+id/txtUsername"
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:text="ismail.xebia"
                        android:textSize="14dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pixplicity.fontview.FontAppCompatTextView
                            android:id="@+id/txtPost"
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textAllCaps="true"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.pixplicity.fontview.FontAppCompatTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Post"
                            android:textAllCaps="true"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Space
                        android:layout_width="24dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.pixplicity.fontview.FontAppCompatTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textAllCaps="true"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <com.pixplicity.fontview.FontAppCompatTextView
                            style="@style/FontTextViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Waiting"
                            android:textAllCaps="true"
                            android:textSize="11dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="-8dp"
                        android:alpha="0.6"
                        android:src="@drawable/back_btn" />

                    <com.pixplicity.fontview.FontAppCompatTextView
                        style="@style/FontTextViewStyle"
                        android:id="@+id/btn_editProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_button"
                        android:text="Edit Profile"
                        android:textColor="#FFF"
                        android:textSize="12.5dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/txtDes"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="-12dp"
                android:lineSpacingExtra="6dp"
                android:text="Lorem Ipsummmmm"
                android:textColor="#747474"
                android:textSize="12.8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="32dp"
                android:background="#eaeaea" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"></android.support.v7.widget.RecyclerView>

            <include layout="@layout/item_list"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!--
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"/>
    -->

</android.support.design.widget.CoordinatorLayout>