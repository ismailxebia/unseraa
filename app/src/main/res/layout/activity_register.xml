<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/accb"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="64dp"
            android:scaleType="fitEnd"
            android:src="@drawable/accent_login_dua" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/intro"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="24dp"
                android:text="ISI DATA DIRI ANDA"
                android:textColor="#4d4d4d"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="-16dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/shadow" />

                <LinearLayout
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="64dp"
                    android:layout_marginTop="64dp"
                    android:background="#FFF"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="16dp">

                    <com.rengwuxian.materialedittext.MaterialEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/etTelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:hint="Masukan Nomor HP"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_typeface="fonts/SF-UI-Display-Regular.otf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="#e6e6e6" />

                    <com.rengwuxian.materialedittext.MaterialEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/etNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:hint="Nama Lengkap"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_typeface="fonts/SF-UI-Display-Regular.otf" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="#e6e6e6" />

                    <com.rengwuxian.materialedittext.MaterialEditText xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        app:met_hideUnderline="true"
                        app:met_typeface="fonts/SF-UI-Display-Regular.otf" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/field"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="-25dp"
                    android:background="@drawable/bg_button_login"
                    android:elevation="6dp"
                    android:padding="12dp">

                    <com.pixplicity.fontview.FontAppCompatTextView
                        style="@style/FontTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:text="REGISTRASI"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>